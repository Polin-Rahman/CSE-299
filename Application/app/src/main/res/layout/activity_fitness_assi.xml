<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FitnessAssiActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/fitnessAssi"
            android:textStyle="italic"
            android:textColor="@color/mint"
            android:textSize="20sp">
        </TextView>


        <Button
            android:id="@+id/regular"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:paddingRight="30dp"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:drawableRight="@drawable/regular"
            android:text="Regular Life based"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="btn_RegularLife"/>

        <Button
            android:id="@+id/busy"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:paddingRight="30dp"
            android:layout_height="70dp"
            android:background="#ffffff"
            android:drawableRight="@drawable/productivity"
            android:text="Busy Life based"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            android:onClick="btn_BusyLife"/>

        <Button
            android:id="@+id/help"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="270dp"
            android:background="@drawable/button_rounded"
            android:backgroundTint="#ffffff"
            android:drawableBottom="@drawable/help"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:onClick="btn_helpBot"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>